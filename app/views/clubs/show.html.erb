<!DOCTYPE html>
<html>
<head>
  <title>HF Clubs | <%= @club.name %></title>
  <%= stylesheet_link_tag    "clubs", :media => "all" %>
  <%= javascript_include_tag "clubs" %>
  <%= csrf_meta_tags %>
  <script type="text/javascript">
    $(function(){
      $('#nav_clubs').addClass('active');
    });
  </script>
</head>

<%= render 'layouts/header' %>
<%= render 'layouts/header2' %>


<div class="row">
	<div class = "about offset1">
		<h4 style="margin-left: 7%">About <%= @club.name %></h4>
		<div class = 'offset1'>
			<%= @club.content %>

		</div>
	</div>
			
</div><!-- end "row" -->
<%= render 'layouts/footer' %>