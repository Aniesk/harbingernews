source 'https://rubygems.org'

# Always available
gem 'rails', '3.2.8'
gem 'jquery-rails'
gem 'bootstrap-sass'

group :development do
  gem 'rspec'
  gem 'rspec-rails'
  gem 'sqlite3'
  gem 'guard-rspec'
end

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :test do
  gem 'rspec-rails'
  gem 'capybara'
  gem 'rb-fsevent', :require => false
  gem 'growl'
  gem 'guard-spork'
  gem 'spork'
end

group :production do
  gem 'pg'
end
